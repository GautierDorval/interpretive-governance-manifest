{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://interpretive-governance.org/schemas/interpretive-index.schema.json",
  "title": "Interpretive Governance â€” interpretive-index schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "type", "inLanguage", "publisher", "scope", "rules", "protocols"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "https://interpretive-governance.org/schemas/interpretive-index.schema.json"
    },
    "type": {
      "type": "string",
      "const": "interpretive-index"
    },
    "inLanguage": {
      "type": "string",
      "minLength": 2
    },
    "publisher": {
      "type": "string",
      "format": "uri"
    },
    "scope": {
      "type": "string",
      "minLength": 10
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/rule" }
    },
    "protocols": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/$defs/protocol" }
    }
  },
  "$defs": {
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "url", "term", "work"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+([a-z0-9-]*[a-z0-9])?$"
        },
        "name": { "type": "string", "minLength": 3 },
        "url": { "type": "string", "format": "uri" },
        "term": { "type": "string", "format": "uri" },
        "work": { "type": "string", "format": "uri" },
        "governedBy": {
          "type": "array",
          "items": { "type": "string", "format": "uri" },
          "minItems": 1
        }
      }
    },
    "protocol": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "url", "work", "governedBy"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+([a-z0-9-]*[a-z0-9])?$"
        },
        "name": { "type": "string", "minLength": 3 },
        "url": { "type": "string", "format": "uri" },
        "work": { "type": "string", "format": "uri" },
        "governedBy": {
          "type": "array",
          "items": { "type": "string", "format": "uri" },
          "minItems": 1
        }
      }
    }
  }
}
