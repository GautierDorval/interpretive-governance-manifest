{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://interpretive-governance.org/schemas/authority/authority-policy.schema.json",
  "title": "Authority governance â€” authority policy schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "policy", "defaults", "rules", "references", "notes"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "policy": {
      "type": "string",
      "const": "authority-policy"
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "required": ["decision", "require_ledger", "require_taxonomy_classification"],
      "properties": {
        "decision": {
          "type": "string",
          "enum": ["allow", "deny", "escalate", "simulate"]
        },
        "require_ledger": { "type": "boolean" },
        "require_taxonomy_classification": { "type": "boolean" }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["action_class", "decision", "requirements"],
        "properties": {
          "action_class": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "minLength": 1
          },
          "decision": {
            "type": "string",
            "enum": ["allow", "deny", "escalate", "simulate"]
          },
          "requirements": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": [
                "ledger",
                "identity",
                "proof_reversibility",
                "auditability",
                "activation",
                "human_oversight",
                "two_person_rule",
                "quorum",
                "veto",
                "simulation",
                "rollback_plan",
                "data_minimization"
              ]
            },
            "uniqueItems": true
          }
        }
      }
    },
    "references": {
      "type": "object",
      "additionalProperties": false,
      "required": ["proof_model", "ledger_spec", "human_oversight"],
      "properties": {
        "proof_model": { "type": "string", "minLength": 1 },
        "ledger_spec": { "type": "string", "minLength": 1 },
        "human_oversight": { "type": "string", "minLength": 1 }
      }
    },
    "notes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rule", "asymmetry"],
      "properties": {
        "rule": { "type": "string", "minLength": 1 },
        "asymmetry": { "type": "string", "minLength": 1 }
      }
    }
  }
}
